{
  "collectionName": "components_tour_departure_dates",
  "info": {
    "displayName": "Departure Date",
    "icon": "calendar",
    "description": "Tour departure dates with availability and pricing"
  },
  "options": {},
  "attributes": {
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "price": {
      "type": "component",
      "repeatable": false,
      "component": "experience.rates"
    },
    "originalPrice": {
      "type": "component",
      "repeatable": false,
      "component": "experience.rates"
    },
    "discountPercentage": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "availability": {
      "type": "enumeration",
      "enum": [
        "Available",
        "Filling Fast",
        "Almost Sold Out",
        "Sold Out",
        "Departure on Request"
      ],
      "default": "Available"
    },
    "guaranteedDeparture": {
      "type": "boolean",
      "default": false
    },
    "instantConfirmation": {
      "type": "boolean",
      "default": false
    },
    "spotsRemaining": {
      "type": "integer"
    },
    "minGroupSize": {
      "type": "integer"
    },
    "maxGroupSize": {
      "type": "integer"
    },
    "currentBookings": {
      "type": "integer",
      "default": 0
    },
    "language": {
      "type": "string",
      "default": "English"
    },
    "specialOffer": {
      "type": "string"
    },
    "holdSpaceHours": {
      "type": "integer"
    },
    "bookingDeadline": {
      "type": "date"
    }
  }
}
