{
  "collectionName": "components_tour_promotional_offers",
  "info": {
    "displayName": "Promotional Offer",
    "icon": "percent",
    "description": "Special offers and promotional campaigns"
  },
  "options": {},
  "attributes": {
    "offerName": {
      "type": "string",
      "required": true
    },
    "offerType": {
      "type": "enumeration",
      "enum": [
        "Black Friday",
        "Cyber Monday",
        "Early Bird",
        "Last Minute",
        "Seasonal",
        "Flash Sale",
        "Year End",
        "New Year",
        "Summer Sale",
        "Winter Sale",
        "Limited Time"
      ],
      "required": true
    },
    "discountPercentage": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "discountAmount": {
      "type": "component",
      "repeatable": false,
      "component": "experience.rates"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "promoCode": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "termsAndConditions": {
      "type": "richtext"
    },
    "badge": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "applicableToAllTours": {
      "type": "boolean",
      "default": false
    },
    "minimumBookingValue": {
      "type": "component",
      "repeatable": false,
      "component": "experience.rates"
    },
    "maxRedemptions": {
      "type": "integer"
    },
    "currentRedemptions": {
      "type": "integer",
      "default": 0
    }
  }
}
