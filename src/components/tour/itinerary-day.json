{
  "collectionName": "components_tour_itinerary_days",
  "info": {
    "displayName": "Itinerary Day",
    "icon": "calendar",
    "description": "Daily itinerary with activities, addons, and details"
  },
  "options": {},
  "attributes": {
    "dayNumber": {
      "type": "integer",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "activities": {
      "type": "json",
      "description": "Array of activity names/descriptions"
    },
    "addons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::addon.addon"
    },
    "meals": {
      "type": "enumeration",
      "enum": [
        "Breakfast",
        "Lunch",
        "Dinner",
        "Breakfast & Lunch",
        "Breakfast & Dinner",
        "Lunch & Dinner",
        "All Meals",
        "None"
      ],
      "default": "None"
    },
    "accommodation": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    }
  }
}
