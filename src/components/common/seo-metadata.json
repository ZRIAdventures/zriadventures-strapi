{
  "collectionName": "components_common_seo_metadata",
  "info": {
    "displayName": "SEO Metadata",
    "icon": "search",
    "description": "SEO and Google Merchant metadata"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    },
    "keywords": {
      "type": "json"
    },
    "canonicalUrl": {
      "type": "string"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "googleProductCategory": {
      "type": "string"
    },
    "gtin": {
      "type": "string"
    },
    "brand": {
      "type": "string",
      "default": "ZRI Adventures"
    },
    "availability": {
      "type": "enumeration",
      "enum": [
        "in stock",
        "out of stock",
        "preorder",
        "backorder"
      ],
      "default": "in stock"
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "new",
        "refurbished",
        "used"
      ],
      "default": "new"
    }
  }
}
