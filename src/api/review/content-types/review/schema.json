{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review",
    "description": "Customer reviews and ratings for tours and experiences"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "reviewerName": {
      "type": "string",
      "required": true
    },
    "reviewerAvatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "overallRating": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 5
    },
    "title": {
      "type": "string"
    },
    "reviewText": {
      "type": "text",
      "required": true
    },
    "tripDate": {
      "type": "date"
    },
    "reviewDate": {
      "type": "datetime"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "merchandise": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchandise.merchandise",
      "inversedBy": "reviews"
    },
    "rental": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::rental.rental",
      "inversedBy": "reviews"
    },
    "event": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::event.event",
      "inversedBy": "reviews"
    },
    "customerPhotos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "helpful": {
      "type": "integer",
      "default": 0
    },
    "travelStyle": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
