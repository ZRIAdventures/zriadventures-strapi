{
  "kind": "collectionType",
  "collectionName": "addons",
  "info": {
    "singularName": "addon",
    "pluralName": "addons",
    "displayName": "Addon",
    "description": "Extra activities and services selectable in tours"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["USD", "LKR"],
      "default": "USD"
    },
    "pricingType": {
      "type": "enumeration",
      "enum": ["per person", "per booking"],
      "default": "per person"
    },
    "isOptional": {
      "type": "boolean",
      "default": true
    },
    "applicableDays": {
      "type": "json",
      "description": "Array of day numbers where this addon is available"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
