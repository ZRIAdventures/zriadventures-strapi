{
  "kind": "collectionType",
  "collectionName": "v2_orders",
  "info": {
    "singularName": "v2-order",
    "pluralName": "v2-orders",
    "displayName": "Orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "contactNumber": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "items": {
      "type": "json"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "SUCCESS",
        "FAILED"
      ]
    },
    "nationality": {
      "type": "string"
    },
    "paymentVendor": {
      "type": "enumeration",
      "enum": [
        "PAYHERE",
        "BANK",
        "KOKO",
        "MINTPAY"
      ]
    },
    "paymentAmountType": {
      "type": "enumeration",
      "enum": [
        "ADVANCE",
        "FULL",
        "INSTALLMENT"
      ]
    },
    "totalAmount": {
      "type": "float"
    },
    "amountPaid": {
      "type": "float"
    },
    "orderId": {
      "type": "uid",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "USD",
        "LKR"
      ]
    },
    "addrLine1": {
      "type": "string"
    },
    "addrLine2": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "postalCode": {
      "type": "string"
    },
    "paymentProviderRef": {
      "type": "string"
    },
    "itemsData": {
      "type": "json"
    },
    "receiptEmailStatus": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "SENT",
        "FAILED"
      ],
      "default": "PENDING"
    },
    "bankCurrency": {
      "type": "string"
    },
    "tour_booking": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tour-booking.tour-booking",
      "mappedBy": "orderRef"
    }
  }
}
