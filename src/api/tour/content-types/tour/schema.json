{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour",
    "description": "Multi-day tour products with itinerary, pricing, accommodations (TourRadar-style)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "status": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "published"
      ]
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "tourType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "private",
        "group",
        "both"
      ]
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "longDescription": {
      "type": "richtext"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "galleryImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "promoVideoUrl": {
      "type": "string"
    },
    "durationDays": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "durationNights": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "startLocation": {
      "type": "string",
      "required": true
    },
    "endLocation": {
      "type": "string",
      "required": true
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "culture",
        "adventure",
        "wildlife",
        "honeymoon",
        "beach",
        "trekking",
        "photography",
        "culinary",
        "spiritual",
        "family"
      ]
    },
    "intensity": {
      "type": "enumeration",
      "default": "moderate",
      "enum": [
        "easy",
        "moderate",
        "challenging"
      ]
    },
    "guidedType": {
      "type": "enumeration",
      "default": "fully guided",
      "enum": [
        "fully guided",
        "partially guided",
        "self-guided"
      ]
    },
    "languages": {
      "type": "json"
    },
    "travelStyle": {
      "type": "enumeration",
      "default": "customizable",
      "enum": [
        "private",
        "group",
        "customizable"
      ]
    },
    "itineraryDays": {
      "type": "component",
      "component": "tour.itinerary-day",
      "repeatable": true
    },
    "places": {
      "type": "component",
      "component": "tour.place-to-see",
      "repeatable": true
    },
    "included": {
      "type": "json"
    },
    "notIncluded": {
      "type": "json"
    },
    "isCustomizable": {
      "type": "boolean",
      "default": true
    },
    "customizationNotes": {
      "type": "text"
    },
    "groupDepartures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::group-tour-departure.group-tour-departure",
      "mappedBy": "tour"
    },
    "paxRates": {
      "type": "component",
      "component": "experience.pax-rates",
      "repeatable": true
    },
    "extras": {
      "type": "component",
      "component": "experience.extras",
      "repeatable": true
    },
    "accomodation": {
      "type": "component",
      "component": "tour.accomodation-options",
      "repeatable": true
    },
    "voucher_templates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::voucher-template.voucher-template"
    }
  }
}
