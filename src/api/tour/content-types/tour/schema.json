{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour",
    "description": "Multi-day tour products with itinerary, pricing, accommodations (TourRadar-style)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published"],
      "default": "draft"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "tourType": {
      "type": "enumeration",
      "enum": ["private", "group", "both"],
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "longDescription": {
      "type": "richtext"
    },
    "highlights": {
      "type": "json",
      "description": "Array of highlight strings"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "galleryImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "promoVideoUrl": {
      "type": "string"
    },
    "durationDays": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "durationNights": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "startLocation": {
      "type": "string",
      "required": true
    },
    "endLocation": {
      "type": "string",
      "required": true
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "culture",
        "adventure",
        "wildlife",
        "honeymoon",
        "beach",
        "trekking",
        "photography",
        "culinary",
        "spiritual",
        "family"
      ]
    },
    "intensity": {
      "type": "enumeration",
      "enum": ["easy", "moderate", "challenging"],
      "default": "moderate"
    },
    "guidedType": {
      "type": "enumeration",
      "enum": ["fully guided", "partially guided", "self-guided"],
      "default": "fully guided"
    },
    "languages": {
      "type": "json",
      "description": "Array of language strings"
    },
    "travelStyle": {
      "type": "enumeration",
      "enum": ["private", "group", "customizable"],
      "default": "customizable"
    },
    "travelMap": {
      "type": "string",
      "description": "URL or embed code for travel map"
    },
    "mapLocations": {
      "type": "json",
      "description": "Array of {name, lat, lng} objects"
    },
    "itineraryDays": {
      "type": "component",
      "repeatable": true,
      "component": "tour.itinerary-day"
    },
    "places": {
      "type": "component",
      "repeatable": true,
      "component": "tour.place-to-see"
    },
    "included": {
      "type": "json",
      "description": "Array of included items"
    },
    "notIncluded": {
      "type": "json",
      "description": "Array of not included items"
    },
    "accommodationAvailable": {
      "type": "boolean",
      "default": true
    },
    "accommodationDescription": {
      "type": "text"
    },
    "allowedAccommodationTypes": {
      "type": "json",
      "description": "Array of: not_required, star_3, star_4, star_5"
    },
    "isCustomizable": {
      "type": "boolean",
      "default": true
    },
    "customizationNotes": {
      "type": "text"
    },
    "cancellationPolicy": {
      "type": "richtext"
    },
    "termsAndConditions": {
      "type": "richtext"
    },
    "pricing": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tour-pricing.tour-pricing",
      "mappedBy": "tour"
    },
    "groupDepartures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::group-tour-departure.group-tour-departure",
      "mappedBy": "tour"
    },
    "addons": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::addon.addon"
    },
    "seoMetadata": {
      "type": "component",
      "repeatable": false,
      "component": "common.seo-metadata"
    }
  }
}
