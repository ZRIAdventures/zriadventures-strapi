{
  "kind": "collectionType",
  "collectionName": "tour_bookings",
  "info": {
    "singularName": "tour-booking",
    "pluralName": "tour-bookings",
    "displayName": "Tour Booking",
    "description": "Tour booking records with price snapshots (never recalculate prices after booking)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "tour": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::tour.tour"
    },
    "departure": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::group-tour-departure.group-tour-departure",
      "description": "Null for private tours, required for group tours"
    },
    "tourType": {
      "type": "enumeration",
      "enum": ["private", "group"],
      "required": true
    },
    "audience": {
      "type": "enumeration",
      "enum": ["local", "tourist"],
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["USD", "LKR"],
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "adults": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "children": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "totalPax": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "accommodationType": {
      "type": "enumeration",
      "enum": ["not_required", "star_3", "star_4", "star_5"]
    },
    "roomCount": {
      "type": "integer",
      "description": "Auto-calculated: 1 pax = 1 DB, 3 pax = 2 DB"
    },
    "roomType": {
      "type": "enumeration",
      "enum": ["DB"],
      "default": "DB",
      "description": "Double Bed rooms only"
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string"
    },
    "specialRequests": {
      "type": "text"
    },
    "selectedAddons": {
      "type": "json",
      "description": "Array of {addonId, title, price, quantity}"
    },
    "baseAmount": {
      "type": "decimal",
      "required": true,
      "description": "Base tour price snapshot"
    },
    "addonsAmount": {
      "type": "decimal",
      "default": 0,
      "description": "Total addons price snapshot"
    },
    "accommodationAmount": {
      "type": "decimal",
      "default": 0,
      "description": "Accommodation price snapshot"
    },
    "tax": {
      "type": "decimal",
      "default": 0,
      "description": "Tax amount snapshot"
    },
    "discount": {
      "type": "decimal",
      "default": 0,
      "description": "Discount amount snapshot"
    },
    "totalAmount": {
      "type": "decimal",
      "required": true,
      "description": "Final total price snapshot - NEVER recalculate"
    },
    "bookingStatus": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "cancelled"],
      "default": "pending"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["unpaid", "paid", "refunded"],
      "default": "unpaid"
    },
    "paymentMethod": {
      "type": "string"
    },
    "internalNotes": {
      "type": "text",
      "description": "Admin-only notes"
    },
    "source": {
      "type": "enumeration",
      "enum": ["web", "admin", "whatsapp", "phone", "email"],
      "default": "web"
    },
    "bookingReference": {
      "type": "uid"
    }
  }
}
